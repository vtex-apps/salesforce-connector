{
  "memory": 256,
  "ttl": 10,
  "timeout": 2,
  "minReplicas": 2,
  "maxReplicas": 4,
  "workers": 1,
  "routes": {
    "UpdateClientHook": {
      "path": "/v1/vtex/clients",
      "public": true
    },
    "CreateTrigger": {
      "path": "/v1/vtex/triggers",
      "public": true
    }
  },
  "events": {
    "orderState": {
      "sender": "vtex.orders-broadcast",
      "topics": ["cancel", "order-created"]
    }
  }
}
